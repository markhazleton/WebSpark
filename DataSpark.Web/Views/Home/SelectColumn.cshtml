@model IEnumerable<string>
@{
    ViewData["Title"] = "Select Column for Analysis";
}
<div class="container mt-4">
    <h2 class="mb-4">Select Column for Analysis</h2>
    <form asp-action="AnalyzeColumn" method="post" class="mb-4">
        <div class="mb-3">
            <label for="column" class="form-label">Choose a column:</label>
            <select id="column" name="column" class="form-select">
                @foreach (var col in Model)
                {
                    <option value="@col">@col</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Analyze</button>
    </form>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }
</div>

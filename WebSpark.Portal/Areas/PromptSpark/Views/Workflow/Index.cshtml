@model List<string>

@{
    ViewData["Title"] = "Available Workflows";
}

<div class="container mt-5">
    <h2>Available Workflows</h2>
    <p class="lead">Select a workflow to view details and manage nodes.</p>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            No workflows found in the directory.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Workflow File</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var workflowFile in Model)
                {
                    <tr>
                        <td>@workflowFile</td>
                        <td>
                            <a asp-action="Details" asp-route-fileName="@workflowFile" class="btn btn-primary btn-sm">
                                View Details
                            </a>
                            <a asp-action="FlowChart" asp-route-fileName="@workflowFile" class="btn btn-primary btn-sm">
                                View Flowchart
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@model RecipeModel
@{
    ViewData["Title"] = "Edit Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="display-6 mb-3">
        <i class="bi bi-pencil-square"></i> Edit Recipe
    </h1>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">
                        <i class="bi bi-card-text"></i> Name
                    </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RecipeCategoryID" class="form-label fw-bold">
                        <i class="bi bi-tags"></i> Category
                    </label>
                    @Html.DropDownListFor(x => Model.RecipeCategoryID, new SelectList(Model.RecipeCategories, "Value", "Text"), htmlAttributes: new { @class = "form-select", id = "RecipeCategoryID" })
                    <span asp-validation-for="RecipeCategoryID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Servings" class="form-label fw-bold">
                        <i class="bi bi-people-fill"></i> Servings
                    </label>
                    <input asp-for="Servings" class="form-control" />
                    <span asp-validation-for="Servings" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">
                        <i class="bi bi-info-circle"></i> Description
                    </label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AuthorNM" class="form-label fw-bold">
                        <i class="bi bi-person-circle"></i> Author
                    </label>
                    <textarea asp-for="AuthorNM" class="form-control"></textarea>
                    <span asp-validation-for="AuthorNM" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Ingredients" class="form-label fw-bold">
                            <i class="bi bi-list-ul"></i> Ingredients
                        </label>
                        <textarea asp-for="Ingredients" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="Ingredients" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Instructions" class="form-label fw-bold">
                            <i class="bi bi-list-ol"></i> Instructions
                        </label>
                        <textarea asp-for="Instructions" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="Instructions" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete" method="post" asp-route-id="@Model.Id" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
    </div>
</div>

@section PageScripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

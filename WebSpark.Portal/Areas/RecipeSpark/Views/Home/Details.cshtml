@model RecipeModel

@{
    ViewData["Title"] = "Recipe Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="display-6 mb-4">
        <i class="bi bi-book-fill"></i> Recipe Details
    </h1>

    <div class="row mb-4">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-2 fw-bold">
                    <i class="bi bi-card-text"></i> @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-2 fw-bold">
                    <i class="bi bi-people-fill"></i> @Html.DisplayNameFor(model => model.Servings)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Servings)
                </dd>

                <dt class="col-sm-2 fw-bold">
                    <i class="bi bi-info-circle-fill"></i> @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Description.ToHtmlFromMarkdown())
                </dd>

                <dt class="col-sm-2 fw-bold">
                    <i class="bi bi-list-ul"></i> @Html.DisplayNameFor(model => model.Ingredients)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Ingredients.ToHtmlFromMarkdown())
                </dd>

                <dt class="col-sm-2 fw-bold">
                    <i class="bi bi-list-ol"></i> @Html.DisplayNameFor(model => model.Instructions)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Instructions.ToHtmlFromMarkdown())
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-start mb-4">
        @Html.HiddenFor(model => model.Id)
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

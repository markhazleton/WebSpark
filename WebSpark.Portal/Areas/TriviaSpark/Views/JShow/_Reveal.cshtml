@model Question

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex align-items-center">
        <i class="bi bi-tags-fill me-2"></i> <!-- Bootstrap icon for category -->
        <strong>TBD</strong>
    </div>
    <div class="card-body">
        <strong>Question:</strong>
        <h3 class="card-title mb-3">
            <i class="bi bi-lightbulb-circle-fill me-2"></i> <!-- Bootstrap icon for lightbulb -->
            @Html.Raw(Model.QuestionText)
        </h3>
        <p class="card-text">
            <i class="bi bi-currency-dollar me-2"></i> <!-- Bootstrap icon for value -->
            <strong>Value:</strong> @Model.Value
        </p>
    </div>
    <div class="card-footer bg-light d-flex justify-content-between align-items-center">
        <div>
            <i class="bi bi-question-circle-fill me-2 text-warning"></i> <!-- Bootstrap icon for question -->
            <strong>Answer:</strong> @Model.Answer
        </div>
    </div>
</div>

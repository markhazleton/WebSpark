@model RoundVM

<form asp-action="CreateRound" method="post">
    <input type="hidden" asp-for="JShowId" />
    <div class="mb-3">
        <label for="Name" class="form-label">Round Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Theme" class="form-label">Theme</label>
        <input type="text" class="form-control" asp-for="Theme" />
        <span asp-validation-for="Theme" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle"></i> Save
    </button>
</form>

@model JShowVM

@{
    ViewData["Title"] = "Delete JShow";
}

<h1 class="my-4">Delete Show</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this show?</h5>
        <p class="card-text"><strong>Show Number:</strong> @Model.ShowNumber</p>
        <p class="card-text"><strong>Theme:</strong> @Model.Theme</p>
        <p class="card-text"><strong>Air Date:</strong> @Model.AirDate</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</form>

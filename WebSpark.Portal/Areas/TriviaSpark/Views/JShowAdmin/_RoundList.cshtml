@model IEnumerable<RoundVM>

@{
    ViewData["Title"] = "Round List";
}

<h3>Rounds</h3>

<a href="@Url.Action("CreateRound", "JShowAdmin", new { jshowId = ViewBag.JShowId })" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Add New Round
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Theme</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Theme</td>
                <td>
                    <a href="@Url.Action("Details", "JShowAdmin", new { id = item.Id })" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a href="@Url.Action("EditRound", "JShowAdmin", new { id = item.Id })" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a href="@Url.Action("DeleteRound", "JShowAdmin", new { id = item.Id })" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

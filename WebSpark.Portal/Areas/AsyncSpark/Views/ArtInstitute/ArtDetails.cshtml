@model HttpRequestResult<ArtDetailsResponse>

@{
    var artWork = new ArtWork(Model?.ResponseResults?.data);
    ViewBag.Title = "Artwork Details";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-info-circle-fill"></i> @artWork.title</h2>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <img src="@artWork.ImageUrl" alt="@artWork.title" class="img-fluid rounded mb-4" />
                </div>
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th scope="row">Title</th>
                                <td>@artWork.title</td>
                            </tr>
                            <tr>
                                <th scope="row">Artist</th>
                                <td>@artWork.artist_title</td>
                            </tr>
                            <tr>
                                <th scope="row">Style</th>
                                <td>@artWork.style_title</td>
                            </tr>
                            <tr>
                                <th scope="row">Materials</th>
                                <td>@string.Join(", ", artWork.material_titles)</td>
                            </tr>
                            <tr>
                                <th scope="row">Artist Details</th>
                                <td>@artWork.artist_display</td>
                            </tr>
                            <tr>
                                <th scope="row">Date</th>
                                <td>@artWork.date_display</td>
                            </tr>
                            <tr>
                                <th scope="row">Dimensions</th>
                                <td>@artWork.dimensions</td>
                            </tr>
                            <tr>
                                <th scope="row">Medium</th>
                                <td>@artWork.medium_display</td>
                            </tr>
                        </tbody>
                    </table>

                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card-footer text-muted text-center">
            @await Html.PartialAsync("_clientSendRequestFooter", Model)
        </div>
    </div>
</div>

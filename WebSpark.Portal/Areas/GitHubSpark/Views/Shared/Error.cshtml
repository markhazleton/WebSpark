@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">
                <i class="fas fa-exclamation-triangle mr-2"></i>
                Error
            </h2>
        </div>
        <div class="card-body">
            <h3>An error occurred while processing your request.</h3>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3">
                    <p><strong>Error Details:</strong> @Model.ErrorMessage</p>
                </div>
            }

            @if (Model.StatusCode.HasValue)
            {
                <div class="alert alert-warning">
                    <p><strong>Status Code:</strong> @Model.StatusCode</p>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.RateLimitInfo))
            {
                <div class="alert alert-info">
                    <p><strong>Rate Limit Information:</strong> @Model.RateLimitInfo</p>
                </div>
            }

            @if (Model.ShowRequestId)
            {
                <p class="text-muted mt-3">
                    <small>Request ID: <code>@Model.RequestId</code></small>
                </p>
            }
        </div>
        <div class="card-footer">
            <a href="@Url.Action("Index", "Home", new { area = "GitHubSpark" })" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left mr-1"></i> Back to GitHub Explorer
            </a>
        </div>
    </div>
</div>
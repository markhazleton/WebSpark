@using Microsoft.AspNetCore.Http
@using WebSpark.Core.Models
@inject IHttpContextAccessor HttpContextAccessor
@{
    var currentYear = DateTime.UtcNow.Year.ToString();
    var status = new WebSpark.Core.Models.ApplicationStatus(System.Reflection.Assembly.GetExecutingAssembly());
    var request = HttpContextAccessor.HttpContext.Request;
    var canonicalUrl = $"{request.Scheme}://{request.Host}{request.Path}{request.QueryString}";
}

<footer class="footer mt-4 bg-light footer-light custom-footer-padding">
    <div class="container px-5">
        <div class="row gx-5 justify-content-between text-center text-md-start">
            <div class="col-12 col-md-3 mb-3">
                <div class="icon-list-social mb-3 d-flex justify-content-center justify-content-md-start">
                    <a class="icon-list-social-link me-2" href="https://www.linkedin.com/in/markhazleton/">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a class="icon-list-social-link me-2" href="https://github.com/markhazleton/">
                        <i class="fab fa-github"></i>
                    </a>
                    <a class="icon-list-social-link me-2" href="https://stackoverflow.com/users/479571/markhazleton">
                        <i class="fab fa-stack-overflow"></i>
                    </a>
                    <a class="icon-list-social-link me-2" href="https://www.instagram.com/markhazleton">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a class="icon-list-social-link" href="https://www.youtube.com/c/markhazleton">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
            <div class="col-12 col-md-6 mb-3">
                &copy; <a href="https://markhazleton.com">Mark Hazleton</a> 2002-@currentYear
                <br /><br />
                @status.BuildVersion.ToString()
            </div>
            <div class="col-12 col-md-3 text-center text-md-end small">
                <div class="d-flex flex-column flex-md-row align-items-center justify-content-center justify-content-md-end mb-2">
                    <a href="/home/privacy" class="me-md-2 mb-2 mb-md-0">Privacy Policy</a>
                    &middot;
                    <a href="/home/terms" class="me-md-2 mb-2 mb-md-0">Terms &amp; Conditions</a>
                    &middot;
                    <a href="/home/kitchensink" class="mb-2 mb-md-0">Demo</a>
                </div>
                <div class="d-flex flex-column flex-md-row align-items-center justify-content-center justify-content-md-end">
                    <span class="me-0 me-md-2 mb-2 mb-md-0">Share:</span>
                    <div class="d-inline-flex">
                        <a href="https://www.linkedin.com/shareArticle?mini=true&url=@canonicalUrl&title=Page%20Title&summary=Page%20Description" class="btn btn-secondary btn-sm me-1 mb-2 mb-md-0" target="_blank">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="mailto:?subject=Check%20this%20out&body=Check%20out%20this%20page: @canonicalUrl" class="btn btn-danger btn-sm me-1 mb-2 mb-md-0" target="_blank">
                            <i class="bi bi-envelope"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>


@section Styles
{
    <!-- Custom CSS to handle padding for the footer -->
    <style>
        .custom-footer-padding {
            padding-top: 0.25rem; /* Reduced top padding */
            padding-bottom: 0.5rem; /* Adjust bottom padding as needed */
        }
    </style>
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebSpark.Portal</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.7/cr-2.0.2/date-1.5.2/r-3.0.2/datatables.min.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.0/feather.min.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("PageStyles", required: false)
</head>
<body>
    <main>
        @await Html.PartialAsync("Sections/NavBar/_navbar")
        <section class="bg-white py-10 container-fluid">
            @await Html.PartialAsync("Sections/NavBar/_nav_area")

            @RenderBody()
        </section>
        <hr class="m-0" />
    </main>

    @await Html.PartialAsync("Sections/Footer/_footer")
    @await Html.PartialAsync("Sections/Footer/_footer_scripts")

    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("PageScripts", required: false)
</body>
</html>

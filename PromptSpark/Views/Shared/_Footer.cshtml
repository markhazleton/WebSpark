@using WebSpark.Domain.Models
@{
    var currentYear = DateTime.UtcNow.Year.ToString();
    var status = new ApplicationStatus(System.Reflection.Assembly.GetExecutingAssembly());
}
<footer class="d-print-none bg-dark">
    <div class="footer-container container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12 text-light" style="float:left">
                @status.BuildVersion.ToString() 
                <br/>
                <a href="https://github.com/markhazleton/webspark" target="_blank">GitHub Repo</a>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 text-light" style="text-align:center;">
                &copy; 2023-@currentYear PromptSpark
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 text-light" style="float:right">
                Last Built: @status.BuildDate.ToLocalTime().ToLongDateString() <br />
                <a href="https://markhazleton.com" target="_blank" title="Mark Hazleton, Lifelong Learner, not sidetracked by sizzle">Mark Hazleton</a>
            </div>
        </div>

    </div>
</footer>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using System.IO
@using System.Text.Json
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Environment
@{
    var areaName1 = ViewContext.RouteData.Values["area"]?.ToString();
    var currentPath = $"/{ViewContext.RouteData.Values["area"]}/{ViewContext.RouteData.Values["controller"]}/{ViewContext.RouteData.Values["action"]}";
    var currentArea = $"/{ViewContext.RouteData.Values["area"]}";
    var jsonFile = areaName1 != null
        ? System.IO.Path.Combine(Environment.ContentRootPath, "Areas", areaName1, "Views", "Shared", "navigation.json")
        : System.IO.Path.Combine(Environment.ContentRootPath, "Views", "Shared", "navigation.json");

    JsonDocument menuItems = null;
    if (File.Exists(jsonFile))
    {
        string json = File.ReadAllText(jsonFile);
        menuItems = JsonDocument.Parse(json);
    }
}

@functions {
    public string GetCanonicalUrl()
    {
        var request = HttpContextAccessor.HttpContext.Request;
        var canonicalUrl = $"{request.Scheme}://{request.Host}{request.Path}{request.QueryString}";
        return canonicalUrl;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="WebSpark is a free and open-source web application built with ASP.NET Core 8.0." />
    <meta name="author" content="Mark Hazleton" />
    <meta name="keywords" content="WebSpark, ASP.NET Core, .NET 8.0, C#, Web Development" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <title>@ViewData["Title"] - Web Spark</title>
    <link rel="canonical" href="@GetCanonicalUrl()" />
    <link rel="stylesheet" href="~/dist/css/style.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="fixed-top">
        <!-- Primary Navbar -->
        <nav class="navbar navbar-marketing navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid px-5">
                <a class="navbar-brand text-primary fw-bold" href="/">
                    <i class="bi bi-house-door-fill"></i> WebSpark
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarPrimary" aria-controls="navbarPrimary" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="bi bi-list"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarPrimary">
                    <ul class="navbar-nav ms-auto me-lg-5 nav-pills">
                        <li class="nav-item">
                            <a class="nav-link custom-pill" href="/">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-pill" href="/Async">
                                <i class="bi bi-arrow-repeat"></i> Async
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Secondary Navbar (Area Specific) -->
        @if (menuItems != null)
        {
        }
    </header>

    @if (menuItems != null)
    {
        <main class="container-fluid main-content pb-3">
            <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mt-3">
                <div class="container-fluid px-5">
                    <a class="navbar-brand fw-bold text-primary" href="@currentArea">
                        <i class="bi bi-box-seam"></i> @areaName1
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSecondary" aria-controls="navbarSecondary" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSecondary">
                        <ul class="navbar-nav nav-pills">
                            @foreach (var item in menuItems.RootElement.GetProperty("menuItems").EnumerateArray())
                            {
                                var url = item.GetProperty("url").GetString();
                                var text = item.GetProperty("text").GetString();
                                var isActive = currentPath.StartsWith(url, StringComparison.OrdinalIgnoreCase);

                                <li class="nav-item">
                                    <a class="nav-link @((isActive ? "active" : ""))"
                                       href="@url"
                                       style="margin: 0 10px; padding: 8px 15px; font-size: 1.1em;
                                          font-weight: 500; color: @(isActive ? "#fff" : "#e2e6ea");
                                          background-color: @(isActive ? "#6c757d" : "transparent");
                                          border-radius: 5px;">
                                        @text
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </main>
    }
    else
    {
        <main class="container-fluid main-content pb-3">
            @RenderBody()
        </main>
    }

    @await Html.PartialAsync("_Footer")
    <script src="~/dist/js/scripts.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

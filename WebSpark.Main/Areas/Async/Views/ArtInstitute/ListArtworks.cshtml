@model IEnumerable<ArtWork>

@{
    ViewBag.Title = "Artworks List";
}

<div class="container my-4">
    <h2 class="mb-4"><i class="bi bi-images"></i> Artworks List</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> No artworks found.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var art in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@art.ImageUrl" class="card-img-top" alt="@art.title" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@art.title</h5>
                            <p class="card-text mb-1"><strong>Artist:</strong> @art.artist_title</p>
                            <p class="card-text mb-1"><strong>Style:</strong> @art.style_title</p>
                            <p class="card-text"><strong>Materials:</strong> @string.Join(", ", art.material_titles)</p>
                            <a asp-action="ArtDetails" asp-area="Async" asp-controller="ArtInstitute" asp-route-id="@art.id" class="btn btn-primary mt-auto">
                                <i class="bi bi-info-circle"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <a asp-action="SearchByStyle" class="btn btn-secondary mt-3">
        <i class="bi bi-search"></i> Search by Style
    </a>
</div>

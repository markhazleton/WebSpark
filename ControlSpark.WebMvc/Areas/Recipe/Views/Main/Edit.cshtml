@model ControlSpark.RecipeManager.Models.RecipeModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Edit Recipe</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeCategoryID" class="control-label"></label>
                @Html.DropDownListFor(x => Model.RecipeCategoryID, new SelectList(Model.RecipeCategories, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "RecipeCategoryID"})
                <span asp-validation-for="RecipeCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servings" class="control-label"></label>
                <input asp-for="Servings" class="form-control" />
                <span asp-validation-for="Servings" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorNM" class="control-label"></label>
                <textarea asp-for="AuthorNM" class="form-control"></textarea>
                <span asp-validation-for="AuthorNM" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Ingredients" class="control-label"></label>
                        <textarea asp-for="Ingredients" class="form-control" rows="20" cols="150"></textarea>
                        <span asp-validation-for="Ingredients" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Instructions" class="control-label"></label>
                        <textarea asp-for="Instructions" class="form-control" rows="20" cols="150"></textarea>
                        <span asp-validation-for="Instructions" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-1">
                    <input type="submit" value="Save" class="btn btn-primary" style="width: 100px;" />
                </div>
                <div class="col-1">
                    <a class="btn-primary btn" asp-action="Details" asp-controller="RecipeCategory" asp-route-Id="@Model.RecipeCategoryID" style="width: 120px; text-align: center;">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

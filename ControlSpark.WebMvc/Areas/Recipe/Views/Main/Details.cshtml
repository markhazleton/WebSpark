@model ControlSpark.RecipeManager.Models.RecipeModel

@{
    ViewData["Title"] = "Recipe Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Recipe Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            <markdown markdown="@Model.Description" normalize-whitespace="false" sanitize-html="false" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servings)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servings)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Ingredients.ToHtmlFromMarkdown())
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Instructions)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Instructions.ToHtmlFromMarkdown())
        </dd>
    </dl>
</div>
<div>
    @Html.HiddenFor(model => model.Id)  
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>

@model IEnumerable<ControlSpark.MineralManager.Entities.CollectionItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpecimenNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MineralVariety)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MineNm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.SpecimenNumber
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nickname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MineralVariety)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MineNm)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CollectionItemId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CollectionItemId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

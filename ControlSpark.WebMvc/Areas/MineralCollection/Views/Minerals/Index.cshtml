@model IEnumerable<ControlSpark.MineralManager.Entities.Mineral>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mineral Name
            </th>
            <th>
                Wikipedia
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDt)
            </th>
            <th>Specimen Count</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MineralNm)
                </td>
                <td>
                    <a href="@item.WikipediaUrl" target="wikipedia">@item.WikipediaUrl</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDt)
                </td>
                <td>
                    @(item?.CollectionItems?.Count() ?? 0)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MineralId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MineralId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MineralId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

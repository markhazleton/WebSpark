@model ControlSpark.MineralManager.Entities.Mineral

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Mineral</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MineralNm)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MineralNm)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MineralDs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MineralDs)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WikipediaUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WikipediaUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedDt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModifiedDt)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MineralId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


@foreach (var col in Model.CollectionItems?? new List<ControlSpark.MineralManager.Entities.CollectionItem>())
{
        <dl class="row">
            <dt class="col-sm-2">
                @col.SpecimenNumber
            </dt>
            <dd class="col-sm-10">
                @col.Description
            </dd>
        </dl>
    
}

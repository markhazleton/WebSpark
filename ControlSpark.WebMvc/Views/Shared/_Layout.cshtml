@{
    var currentYear = DateTime.Now.Year.ToString();
    var status = new ApplicationStatus(System.Reflection.Assembly.GetExecutingAssembly());
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Mwh.Sample.Core.WebApi - Mark Hazleton">
    <meta name="author" content="Mark Hazleton">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/lib/datatables.net-bs/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("HeadScripts", required: false)
</head>
<body id="page-top">
    <header>
        @await Html.PartialAsync("/Views/Shared/_nav.cshtml")
    </header>
    <main role="main" class="content-container pb-3">
        <section class="container-fluid" style="padding-top:25px;margin-top:25px;margin-bottom:25px;padding-bottom:25px;">
            @RenderBody()
        </section>
    </main>

    @await Html.PartialAsync("/Views/Shared/_Footer.cshtml")

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/datatables.net-bs/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
@model                         DefinitionDto

@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-8">
        <h1>@Model.Name</h1>
        <p>@Model.DefinitionType</p>

    </div>
    <div class="col-4">
        <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@Model?.DefinitionId">Edit</a>
        <a class="btn btn-danger me-2" asp-action="Refresh" asp-route-id="@Model?.DefinitionId">Refresh</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
<div>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-8">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Prompt)
                    </dt>
                    <dd class="col-sm-10">
                        <textarea readonly class="form-control" rows="15" style="width: 100%;">
                            @Html.Raw(Model.Prompt)
                        </textarea>
                    </dd>
                </dl>
            </div>
            <div class="col-4">
                <dl class="row">
                    <dt class="col-sm-2">
                        Role
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Role)
                    </dd>
                    <dt class="col-sm-2">
                        Model
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Model)
                    </dd>
                    <dt class="col-sm-2">
                        Output
                        </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OutputType)
                    </dd>
                    <dt class="col-sm-2">
                        Temp
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Temperature)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_DefinitionResponseDtosPartial", Model.DefinitionResponses)

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new DataTable('#displayTable', {
                order: [[3, 'desc']]
            });
        });
    </script>
}

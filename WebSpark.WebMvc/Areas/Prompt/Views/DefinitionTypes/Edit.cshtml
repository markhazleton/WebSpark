@model                         DefinitionTypeDto

@{
    ViewData["Title"] = "Edit Definition Type";
}
<div class="row">
    <div class="col-8">
        <h1>Edit Definition Type: @Model.DefinitionType</h1>
    </div>
    <div class="col-4">
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DefinitionType" class="control-label"></label>
                <input asp-for="DefinitionType" class="form-control" />
                <span asp-validation-for="DefinitionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutputType" class="control-label"></label>
                <select asp-for="OutputType" asp-items="Html.GetEnumSelectList<OutputType>()" class="form-control"></select>
                <span asp-validation-for="OutputType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

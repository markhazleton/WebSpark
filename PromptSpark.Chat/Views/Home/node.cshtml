@model             WorkflowNodeResponse

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workflow Step</title>
</head>
<body>
    <h2>@Model.Question</h2>

    <form id="workflowForm" action="/Home/Step" method="post">
        <input type="hidden" id="nextLinkInput" name="nextLink" value="">
        <div>
            @foreach (var answer in Model.Answers)
            {
                <button type="button" onclick="submitForm('@answer.Link')">@answer.Response</button>
            }
        </div>
    </form>

    <script>
        function submitForm(nextLink) {
            // Set the hidden input's value to the selected link
            document.getElementById("nextLinkInput").value = nextLink;
            // Submit the form
            document.getElementById("workflowForm").submit();
        }
    </script>
</body>
</html>
